{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@dragonfish/api/content-library": ["libs/api/content-library/src/index.ts"],
            "@dragonfish/api/database/*": ["libs/api/database/src/lib/*"],
            "@dragonfish/api/notifications": ["libs/api/notifications/src/index.ts"],
            "@dragonfish/api/utilities/*": ["libs/api/utilities/src/lib/*"],
            "@dragonfish/client/alerts": ["libs/client/alerts/src/index.ts"],
            "@dragonfish/client/dashboard": ["libs/client/dashboard/src/index.ts"],
            "@dragonfish/client/editor": ["libs/client/editor/src/index.ts"],
            "@dragonfish/client/editor-lite": ["libs/client/editor-lite/src/index.ts"],
            "@dragonfish/client/icons": ["libs/client/icons/src/index.ts"],
            "@dragonfish/client/material": ["libs/client/material/src/index.ts"],
            "@dragonfish/client/my-library": ["libs/client/my-library/src/index.ts"],
            "@dragonfish/client/pipes": ["libs/client/pipes/src/index.ts"],
            "@dragonfish/client/profile": ["libs/client/profile/src/index.ts"],
            "@dragonfish/client/repository/*": ["libs/client/repository/src/lib/*"],
            "@dragonfish/client/services": ["libs/client/services/src/index.ts"],
            "@dragonfish/client/settings": ["libs/client/settings/src/index.ts"],
            "@dragonfish/client/ui": ["libs/client/ui/src/index.ts"],
            "@dragonfish/client/work-page": ["libs/client/work-page/src/index.ts"],
            "@dragonfish/shared/*": ["libs/shared/src/lib/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
